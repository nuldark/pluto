{
  "name": "nulldark/entity-manager",
  "description": "entity-manager",
  "license": "LGPL-2.1-only",
  "autoload": {
    "psr-4": {
      "NullDark\\": "src/EntityManager/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nulldark\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "8.2.* || 8.3.*"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8"
  },
  "config": {
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    },
    "bin-dir": "bin",
    "sort-packages": true
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "target-directory": "tools",
      "forward-command": true
    }
  },
  "scripts": {
    "static-analyze:phpstan": "bin/phpstan --memory-limit=-1",
    "static-analyze:phpmetrics": "bin/phpmetrics --report-html=.build/metrics src/",
    "tests:units": "bin/phpunit",
    "lint:check": "bin/phpcs",
    "lint:fix": "bin/php-cs-fixer fix --rules=@PSR12 src/",
    "tools:clean": "rm -rf tools/*/vendor && rm -rf vendor/",
    "post-install-cmd": [
      "@composer bin all install --ansi"
    ],
    "post-update-cmd": [
      "@composer bin all update --ansi"
    ]
  }
}
