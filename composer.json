{
  "name": "nulldark/entity-manager",
  "license": "LGPL-2.1-only",
  "autoload": {
    "psr-4": {
      "NullDark\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nulldark\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8"
  },
  "config": {
    "bin-dir": "bin",
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "target-directory": "tools"
    }
  },
  "scripts": {
    "lint:fix": "bin/php-cs-fixer fix --rules=@PSR12 src/",
    "tools:clean": "rm -rf tools/*/vendor && rm -rf vendor/",
    "post-install-cmd": [
      "@composer bin all install --ansi"
    ],
    "post-update-cmd": [
      "@composer bin all update --ansi"
    ]
  }
}
